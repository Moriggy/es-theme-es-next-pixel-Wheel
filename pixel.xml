<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">
	
		<view name="system">
		
			<!-- #### Posicion de los logos #### -->
		
			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<pos>-0.19 0</pos>
				<size>1 1</size>
				<logoScale>1.</logoScale>
				<logoSize>0.2 0.5</logoSize>
				<color>00000000</color>
				<logoRotation>-10</logoRotation>
				<logoRotationOrigin>-2 0.5</logoRotationOrigin>
				<maxLogoCount>7</maxLogoCount>
				<logoAlignment>center</logoAlignment>
				<zIndex>3</zIndex>
			</carousel>
	  
			<!-- #### Barra fondo para logos de sistemas #### -->
				
			<image name="systemcarousel_background" extra="true">
				<tile>false</tile>
				<origin>0 0</origin>
				<pos>0.08 0</pos>
				<path>./data/arts/system_carousel_vertical_wheel_background.png</path>
				<color>7c6c6b</color>
				<zIndex>2</zIndex>
			</image>
			
			<image name="systemInfoBack" extra="true">
				<tile>false</tile>
				<origin>0 0</origin>
				<pos>0.08 0</pos>
				<path>./data/arts/system_carousel_vertical_wheel_border.png</path>
				<color>7c6c6b</color>
				<zIndex>2</zIndex>
			</image>
				
			<!-- #### Número de juegos del sistema #### -->
				
			<text name="systemInfo">
				<origin>0.5 0</origin>
				<alignment>center</alignment>
				<pos>0.1 0.58</pos>
				<fontPath>./data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
				<fontSize>0.021</fontSize>
				<size>.16 .01</size>
				<color>ffffff</color>
				<zIndex>3</zIndex>
			</text>
			
			<image name="console" extra="true">
				<pos>0.1 0.55</pos>
				<maxSize>0.15 0.24</maxSize>
				<origin>0.5 1</origin>
				<path>./data/console/${system.theme}.svg</path>
				<zIndex>3</zIndex>
			</image>
		
			<!-- #### Fondo y logo del sistema #### -->
			
			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>1 1</size>
				<path>./data/arts/background_wheel.jpg</path>
				<zIndex>1</zIndex>
			</image>
			
		</view>
		
	</feature>
	
	<!-- #### Tipografía del texto de ayuda #### -->
	
	<view name="system, basic, detailed, video">
	
		<helpsystem name="help">
			<fontPath>./data/arts/steelfishrg.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>
		
	</view>
	
	<!-- ############## GAMELIST ############## -->
	
	<view name="basic, detailed, video">
		
		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
	
		<textlist name="gamelist">
			<selectorColor>ffffff</selectorColor>
			<selectedColor>222222</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontPath>./data/arts/Exo2-BoldCondensed.otf</fontPath>
			<fontSize>0.024</fontSize>
			<forceUppercase>1</forceUppercase>
		</textlist>
	
	</view>
	
	<!-- #### Diseños tipos de vista de gamelist #### -->
	
	<!-- #### BÁSICO #### -->
	
	<view name="basic">
	
		<image name="background" extra="true">
			<path>./data/arts/gamelist_basic.png</path>
		</image>
		
		<image name="backtext1" extra="true">
			<pos>0.025 0.21</pos>
			<size>0.95 0.71</size>
			<origin>0 0</origin>
			<color>222222ee</color>
			<path>./data/arts/back90.png</path>
		</image>
		
		<textlist name="gamelist">
			<pos>0.030 0.219</pos>
			<size>0.941 0.700</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>
		
	</view>
	
	<!-- #### DETALLADO Y VIDEO #### -->
	
	<view name="detailed">
	
		<!-- #### Posicion y tamaño imagen juego #### -->

		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.64 0.48</pos>
			<maxSize>0.360 0.400</maxSize>
		</image>
		
	</view>
	
	<feature supported="video">
	
		<view name="video">
		
			<!-- #### Posicion y tamaño del video juego #### -->

			<video name="md_video">
				<origin>0.5 0.5</origin>
				<pos>0.64 0.48</pos>
				<maxSize>0.360 0.400</maxSize>
				<delay>0.8</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>
			
		</view>
		
	</feature>
	
	<view name="detailed, video">
	
		<image name="background" extra="true">
			<path>./data/arts/gamelist_standard.png</path>
		</image>
		
		<image name="backtext2" extra="true">
			<pos>0.025 0.21</pos>
			<size>0.39 0.71</size>
			<origin>0 0</origin>
			<color>222222ee</color>
			<path>./data/arts/back90.png</path>
		</image>
		
		<image name="backtext3" extra="true">
			<pos>0.45 0.21</pos>
			<size>0.52 0.71</size>
			<origin>0 0</origin>
			<color>222222ee</color>
			<path>./data/arts/back90.png</path>
		</image>

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<forceUppercase>1</forceUppercase>
			<fontPath>./data/arts/Exo2-BoldCondensed.otf</fontPath>
			<fontSize>0.02</fontSize>
			<color>ffffff</color>
			<size>0.144 0.02</size>
		</text>
		
		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite">
			<forceUppercase>1</forceUppercase>
			<fontPath>./data/arts/Exo2-RegularCondensed.otf</fontPath>
			<fontSize>0.02</fontSize>
			<color>ffffff</color>
		</text>
		
		<text name="md_description">
			<forceUppercase>1</forceUppercase>
			<fontPath>./data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
			<color>ffffff</color>
			<fontSize>0.024</fontSize>
		</text>
		
		<datetime name="md_releasedate, md_lastplayed">
			<forceUppercase>1</forceUppercase>
