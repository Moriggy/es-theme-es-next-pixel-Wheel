			<size>0 0.02</size>
		</datetime>
		
		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite, md_genre">
			<size>0.13 0.02</size>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>0.815 0.2575</pos>
		</text>		
		<datetime name="md_releasedate">
			<pos>0.83 0.2775</pos>			
		</datetime>		
		
		<text name="md_lbl_developer">
			<pos>0.815 0.3075</pos>
		</text>		
		<text name="md_developer">
			<pos>0.83 0.3275</pos>
		</text>
		
		<text name="md_lbl_publisher">
			<pos>0.815 0.3575</pos>
		</text>		
		<text name="md_publisher">
			<pos>0.83 0.3775</pos>
		</text>		
		
		<text name="md_lbl_genre">
			<pos>0.815 0.4075</pos>
		</text>		
		<text name="md_genre">
			<pos>0.83 0.4275</pos>
		</text>		
		
		<text name="md_lbl_players">
			<pos>0.815 0.4575</pos>
		</text>		
		<text name="md_players">
			<pos>0.83 0.4775</pos>
		</text>		

		<text name="md_lbl_lastplayed">
			<pos>2 2</pos>
		</text>
		<datetime name="md_lastplayed">
			<pos>2 2</pos>
		</datetime>
		
		<text name="md_lbl_playcount">
			<pos>2 2</pos>
		</text>
		<text name="md_playcount">
			<pos>2 2</pos>
		</text>

		<text name="md_lbl_favorite">
			<pos>2 2</pos>
		</text>
		<text name="md_favorite">
			<pos>2 2</pos>
		</text>
		
		<text name="md_lbl_rating">
			<pos>1 1</pos>
			<fontPath>./data/arts/blank.ttf</fontPath>
		</text>
		
		
		<rating name="md_rating">
			<pos>0.60 0.235</pos>
			<size>0.04 0.03</size>
		</rating>

		<text name="md_description">
			<lineSpacing>1.2</lineSpacing>
			<pos>0.465 0.69</pos>
			<size>0.495 0.22</size>
			<fontSize>0.02</fontSize>
		</text>
		
		<textlist name="gamelist">
			<pos>0.030  0.219</pos> 
			<size>0.383 0.700</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>
		
	</view>
	
</theme>
